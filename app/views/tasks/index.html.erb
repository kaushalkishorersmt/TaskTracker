<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Worked on</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "btn btn-default" %></td>
        <% if task.user == current_user %>
          <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        <% end %>

      </tr>
      <td><small class="author">Submitted <%= time_ago_in_words(task.created_at) %> by <%= task.user.email %> </small></td>
    <% end %>
  </tbody>
</table>
